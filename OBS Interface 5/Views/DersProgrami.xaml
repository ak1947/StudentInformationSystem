        <Border Grid.Row="0" BorderThickness="0,0,0,1" BorderBrush="LightGray" Grid.ColumnSpan="6"/>
        <Border Grid.Row="1" BorderThickness="0,0,0,1" BorderBrush="LightGray" Grid.ColumnSpan="6"/>
